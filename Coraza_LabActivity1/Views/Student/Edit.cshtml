@{
}
@model Student;

<h1>Edit a Student</h1>


<form asp-action="Edit" method="post">
    <div class="form-group" style="display:none">
        <label asp-for="Id" >ID</label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" >Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    
    
    
    <div class="form-group">
            <label for="Course">Course</label>
            <select asp-for="Course" class="form-control">
                @foreach (var course in
                Enum.GetValues(typeof(Course)))
                {
                    <option value="@course">@course</option>
                }
            </select>

        </div>

    <div class="form-group">
        <label asp-for="DateEnrolled">Date Enrolled</label>
        <input asp-for="DateEnrolled" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <button type="button" onclick="history.back()" class="btn btn-default">Cancel</button>
</form>