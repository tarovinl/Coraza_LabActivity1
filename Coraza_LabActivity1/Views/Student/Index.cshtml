@model IEnumerable<Student>;

<div>Student List</div>

<a href="@Url.Action("AddStudent", "Student")" class="btn btn-primary">Add Student</a>

<table class="table table-striped table-dark">

    <tr>
        <th colspan="8">Student</th>
    </tr>

    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Course</td>
        <td>Date Enrolled</td>
        <td>Details</td>
        <td></td>
        <td></td>

    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id </td>
            <td>@student.Name</td>
            <td>@student.Course</td>
            <td>@student.DateEnrolled</td>
            <td><a class="btn btn-primary" asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
            <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>
            <td><a class="btn btn-primary" asp-action="Delete" asp-route-id="@student.Id">Delete</a></td>
        </tr>
    }
</table>