@model IEnumerable<Instructor>;

<div>Instructor List</div>

<a href="@Url.Action("AddInstructor", "Instructor")" class="btn btn-primary">Add Instructor</a>

<table class="table table-striped table-dark">

    <tr>
        <th colspan="9">Instructor</th>
    </tr>

    <tr>
        <td>ID</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Status</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>
        <td></td>
        <td></td>

    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.Id </td>
            <td>@instructor.FirstName</td>
            <td>@instructor.LastName</td>
            <td>@instructor.IsTenured</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td><a class="btn btn-primary" asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@instructor.Id">Edit</a></td>
            <td><a class="btn btn-primary" asp-action="Delete" asp-route-id="@instructor.Id">Delete</a></td>
        </tr>
    }
</table>